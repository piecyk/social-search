<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- See http://logback.qos.ch/manual/layouts.html -->
      <pattern>%date{MM/dd HH:mm:ss} %-5level[%thread] %logger{1} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="dispatch" level="error"/>
  <logger name="akka.dispatcher" level="OFF"/>
  <logger name="akka" level="OFF"/>
  <logger name="org.apache.http.headers" level="OFF" />
  <logger name="akka.actor" level="OFF" />

  <logger name="com.gagnechris.backend" level="error" additivity="true" />

  <root level="OFF">
    <!-- <appender-ref ref="CONSOLE"/> -->
  </root>

</configuration>
